<% provide(:title, 'All Invoices') %>

<div id="nwkm_filters">
  <%= form_tag invoices_path, method: :get do %>
    <%= select_tag :season_id, options_from_collection_for_select(@seasons, :id, :name, params[:season_id]), {include_blank: true, class: "span3"} %>
    <%= select_tag :player_id, options_from_collection_for_select(@players, :id, :full_name, params[:player_id]), {include_blank: true, class: "span3"} %>
    <%= select_tag :status, options_for_select(status_types, params[:status]), {include_blank: true, class: "span3"} %>
    <%= button_tag type: :submit, class: "btn" do %>
      <i class="icon-search icon-white"></i> Search
    <% end %>
  <% end %>
</div>

<%= will_paginate %>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Code</th>
    <th>Player</th>
    <th>Season</th>
    <th>Amount</th>
    <th>Outstanding</th>
    <th>Notes</th>
    <% if admin? %>
      <th></th>
      <th></th>
      <th></th>
    <% end %>
  </tr>

  <%=render @invoices %>

</table>

<%= will_paginate %>

<% if admin? %>
  <%= link_to raw('<i class="icon-plus icon-white"></i> New Invoice'), new_invoice_path, class: "btn btn-large btn-primary" %>
<% end %>

<% provide :leftNavButtonBody, 'Home' %>
<% provide :leftNavButtonUrl, root_path %>

<% provide :rightNavButtonBody, 'Payments' %>
<% provide :rightNavButtonUrl, payments_path %>