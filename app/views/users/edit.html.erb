<% provide(:title, "Edit User") %> 
<h1>
  <%=@user.name %>
  <small>
    Edit
  </small>
</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, html: {class: "form-horizontal well"}) do |f| %>
      
      <%=render 'fields', f: f %>

      <div class="form-actions">
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
        <%= link_to 'Cancel', @user, class: "btn btn-large" %>
      </div>
    <% end %>
  </div>
</div>

<% provide :leftNavButtonBody, 'Users' %>
<% provide :leftNavButtonUrl, users_path %>