<% provide(:title, 'New Payment') %>
<h1><%=yield(:title) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@payment, html: {class: "form-horizontal well"}) do |f| %>

      <%=render 'fields', f: f %>

      <div class="form-actions">
        <%= f.submit "Create Payment", class: "btn btn-large btn-primary btn-success" %>
        <%= link_to 'Cancel', payments_path, class: "btn btn-large" %>
      </div>
    <% end %>
  </div>
</div>

<% provide :leftNavButtonBody, 'Payments' %>
<% provide :leftNavButtonUrl, payments_path %>