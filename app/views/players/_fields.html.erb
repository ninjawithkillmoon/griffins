<%= render 'shared/error_messages', resource: @player %>

<%= f.label :name_family, "Family Name" %>
<%= f.text_field :name_family %>

<%= f.label :name_given, "Given Name" %>
<%= f.text_field :name_given %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :sex %>
<%= f.select :sex, {Male: SEX_MALE, Female: SEX_FEMALE} %>

<%= f.label :date_of_birth, "Date of Birth" %>
<%= f.date_select :date_of_birth, {start_year: 1950, end_year: Time.now.year, use_month_numbers: true, include_blank: true, date_separator: "<span class='nwkm_dateSelectorSeparator'>&nbsp;/&nbsp;</span>"}, {class: "nwkm_dateSelector"} %>