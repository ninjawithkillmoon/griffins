<%= render 'shared/error_messages', resource: @season %>

<%= f.label :name, "Name" %>
<%= f.text_field :name %>

<%= f.label :date_start, "Start Date" %>
<%= f.date_select :date_start, {discard_day: true, start_year: Time.now.year - 5, end_year: Time.now.year + 10, use_month_numbers: true, date_separator: "<span class='nwkm_dateSelectorSeparator'>&nbsp;/&nbsp;</span>"}, {class: "nwkm_dateSelector"} %>

<%= f.label :cost, "Cost" %>
<%= f.number_field :cost, {step: 0.01, min: 0.00} %>

<%= f.label :cost_student, "Cost (Student)" %>
<%= f.number_field :cost_student, {step: 0.01, min: 0.00} %>