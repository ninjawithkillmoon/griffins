<% provide(:title, 'All Seasons') %>
<h1><%=yield(:title) %></h1>

<%= will_paginate %>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Start Date</th>
    <th>Cost</th>
    <th>Cost (Student)</th>
    <% if admin? %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

  <%=render @seasons %>

</table>

<br />

<% if admin? %>
  <%= link_to 'New Season', new_season_path, class: "btn btn-large btn-primary" %>
<% end %>

<% provide :leftNavButtonBody, 'Competitions' %>
